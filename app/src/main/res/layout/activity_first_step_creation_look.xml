<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/all_things"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/looks_all_things_btn" />

        <Button
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/looks_create_btn" />

        <Button
            android:id="@+id/save_collage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/looks_collage_save_btn" />


    </LinearLayout>


    <FrameLayout
        android:id="@+id/look_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

</LinearLayout>